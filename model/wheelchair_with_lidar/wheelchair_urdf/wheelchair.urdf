<?xml version="1.0" ?>
<robot name="wheelchai_with_lidar">
  <!-- Mainbody -->
  <link name="Mainbody">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="model://wheelchair/wheelchair_urdf/meshes/Wheelchair.stl" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="model://wheelchair/wheelchair_urdf/meshes/Wheelchair.stl" scale="1 1 1"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu value="0"/>
            <mu2 value="0"/>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

  <!-- Lidar link -->
  <link name="lidar_link">
    <inertial>
      <mass value="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="Mainbody"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 1.2" rpy="0 0 0"/>
  </joint>

  <!-- Left Main Wheel -->
  <link name="left_main_wheel">
    <inertial>
      <mass value="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.155" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.155" length="0.05"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu value="1000000.0"/>
            <mu2 value="1000000.0"/>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

  <joint name="left_wheel_main_hinge" type="revolute">
    <parent link="Mainbody"/>
    <child link="left_main_wheel"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Right Main Wheel -->
  <link name="right_main_wheel">
    <inertial>
      <mass value="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.155" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.155" length="0.05"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu value="1000000.0"/>
            <mu2 value="1000000.0"/>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

  <joint name="right_wheel_main_hinge" type="revolute">
    <parent link="Mainbody"/>
    <child link="right_main_wheel"/>
    <axis xyz="0 0 -1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Left Front Pin -->
  <link name="left_front_pin">
    <inertial>
      <mass value="0.05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="model://wheelchair/meshes/Hinge.stl" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="model://wheelchair/meshes/Hinge.stl" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_front_hinge_pin" type="revolute">
    <parent link="Mainbody"/>
    <child link="left_front_pin"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Right Front Pin -->
  <link name="right_front_pin">
    <inertial>
      <mass value="0.05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="model://wheelchair/meshes/Hinge.stl" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="model://wheelchair/meshes/Hinge.stl" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_front_hinge_pin" type="revolute">
    <parent link="Mainbody"/>
    <child link="right_front_pin"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Additional links and joints can be added in similar fashion -->
</robot>
