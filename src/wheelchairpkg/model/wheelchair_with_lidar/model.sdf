<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="wheelchair_with_lidar">
    <pose>0 0 0.1 0 0 0</pose>
    <static>false</static>

    <!-- Main body of the wheelchair -->
    <link name="Mainbody">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1</mass>
        <inertia>
          <ixx>0.1</ixx> <iyy>0.1</iyy> <izz>0.1</izz>
          <ixy>0.0</ixy> <ixz>0.0</ixz> <iyz>0.0</iyz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://wheelchair/meshes/Wheelchair.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://wheelchair/meshes/Wheelchair.stl</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </visual>
    </link>

    <!-- LIDAR sensor on top of the wheelchair -->
    <link name="lidar_link">
      <pose>0 0 1.2 0 0 0</pose> <!-- Positioning the LIDAR on top -->
      <sensor type="ray" name="lidar_sensor">
        <pose>0 0 0.1 0 0 0</pose>
        <visualize>true</visualize>
        <ray>
          <scan>
            <horizontal>
              <samples>640</samples>
              <resolution>1</resolution>
              <min_angle>-0.5</min_angle>
              <max_angle>0.5</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>

        <!-- Plugin de ROS para publicar los datos del láser -->
        <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <!-- Publica los datos del láser en el tópico /scan -->
            <remapping>~/out:=/scan</remapping>
          </ros>
          <!-- Frame del sensor -->
          <frameName>lidar_link</frameName>
        </plugin>
      </sensor>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent>Mainbody</parent>
      <child>lidar_link</child>
    </joint>

    <!-- Left wheel -->
    <link name="left_main_wheel">
      <pose>-0.091 -0.33 0.109 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.155</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.155</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint type="revolute" name="left_wheel_joint">
      <parent>Mainbody</parent>
      <child>left_main_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Right wheel -->
    <link name="right_main_wheel">
      <pose>-0.091 0.33 0.109 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.155</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.155</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint type="revolute" name="right_wheel_joint">
      <parent>Mainbody</parent>
      <child>right_main_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Differential Drive Plugin -->
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/wheelchair</namespace>
        <remapping>cmd_vel:=/wheelchair/cmd_vel</remapping>
      </ros>
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.66</wheel_separation>
      <wheel_radius>0.155</wheel_radius>
      <update_rate>100</update_rate>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>

    <!-- Left front wheel -->
    <link name="left_front_wheel">
      <pose>0.245 -0.33 0.039 0 1.57 1.57</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>
    <joint type="revolute" name="left_front_wheel_joint">
      <parent>Mainbody</parent>
      <child>left_front_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Right front wheel -->
    <link name="right_front_wheel">
      <pose>0.245 0.33 0.039 0 1.57 1.57</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>
    <joint type="revolute" name="right_front_wheel_joint">
      <parent>Mainbody</parent>
      <child>right_front_wheel</child>
      <axis>
        <xyz>0 0 -1</xyz>
      </axis>
    </joint>

    <!-- Left rear wheel -->
    <link name="left_rear_wheel">
      <pose>-0.548 -0.33 0.039 0 1.57 1.57</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>
    <joint type="revolute" name="left_rear_wheel_joint">
      <parent>Mainbody</parent>
      <child>left_rear_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Right rear wheel -->
    <link name="right_rear_wheel">
      <pose>-0.548 0.33 0.039 0 1.57 1.57</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.085</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>
    <joint type="revolute" name="right_rear_wheel_joint">
      <parent>Mainbody</parent>
      <child>right_rear_wheel</child>
      <axis>
        <xyz>0 0 -1</xyz>
      </axis>
    </joint>

    <plugin name="ros2_control" filename="libgazebo_ros2_control.so">
      <robot_namespace>/</robot_namespace>
      <robot_description>robot_description</robot_description>
      <legacyModeNS>false</legacyModeNS>
    </plugin>

    <!-- Agregar el plugin para control diferencial -->
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>odom:=/odom</remapping>
      </ros>
      <update_rate>50</update_rate>
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.5</wheel_separation>
      <wheel_radius>0.15</wheel_radius>
      <odom_frame>odom</odom_frame>
      <base_frame>base_link</base_frame>
      <enable_odom_tf>true</enable_odom_tf>
    </plugin>

  </model>
</sdf>
